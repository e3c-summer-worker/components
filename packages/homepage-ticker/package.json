{
  "name": "@e3c-summer-worker/homepage-ticker",
  "version": "1.1.0",
  "files": [
    "build/*"
  ],
  "scripts": {
    "start": "concurrently \"npm:start:*\"",
    "start:elm": "elm-live src/HomepageTicker.elm -H -p 8000 --dir=./build -- --output=build/homepage-ticker-elm.js",
    "start:scss": "npm run build:scss && node-sass src/ticker.scss -o build -w",
    "build": "concurrently \"npm:build:*\"",
    "build:scss": "node-sass src/ticker.scss -o build",
    "build:elm": "npm run build:preprocess && npm run uglify && rm buffer.js",
    "build:preprocess": "elm make src/HomepageTicker.elm --optimize --output=buffer.js",
    "uglify": "uglifyjs buffer.js --compress 'pure_funcs=[F2,F3,F4,F5,F6,F7,F8,F9,A2,A3,A4,A5,A6,A7,A8,A9],pure_getters,keep_fargs=false,unsafe_comps,unsafe' | uglifyjs --mangle --output build/homepage-ticker-elm.js"
  },
  "devDependencies": {
    "concurrently": "^6.2.1",
    "elm-format": "^0.8.5",
    "elm-live": "^4.0.2",
    "node-sass": "^6.0.1",
    "uglify-js": "^3.14.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
